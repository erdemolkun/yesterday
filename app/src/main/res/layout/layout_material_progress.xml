<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:wheel="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="64dp"
              android:layout_gravity="center"
              android:background="@drawable/bg_loading_white"
              android:minWidth="64dp"
              android:orientation="horizontal">

    <com.protel.yesterday.ui.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:elevation="2dp"
            wheel:matProg_barColor="?colorPrimary"
            wheel:matProg_barSpinCycleTime="900"
            wheel:matProg_barWidth="4dp"
            wheel:matProg_circleRadius="26dp"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_spinSpeed="1"/>

    <TextView
            android:id="@+id/tv_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-light"
            android:padding="8dp"
            android:textColor="#444"
            android:textStyle="bold"
            tools:text="@string/loading_weather_info"/>

</LinearLayout>



